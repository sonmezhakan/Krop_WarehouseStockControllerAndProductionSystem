@using Krop.DTO.Dtos.AppUsers
@model CreateAppUserDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>

    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/compiled/css/app.css" />
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/compiled/css/app-dark.css" />
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/compiled/css/auth.css">
</head>
<body>
    <script src="~/themes/mazer-theme/dist/assets/static/js/initTheme.js"></script>
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <h1 class="auth-title">Kayıt Ol</h1>
                    <form method="post">
                        @if(TempData["RegisterError"] != null)
                        {
                            <div class="alert alert-danger">
                                <span>@TempData["RegisterError"]</span>
                            </div>
                        }
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-l" asp-for="Email" placeholder="Email">
                            <div class="form-control-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-l" asp-for="UserName" placeholder="Kullanıcı Adı">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="password" class="form-control form-control-l" asp-for="Password" placeholder="Şifre">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row d-flex">
                                <div class="col-md-6">
                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input type="text" class="form-control form-control-l" asp-for="FirstName" placeholder="Ad">
                                        <div class="form-control-icon">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input type="text" class="form-control form-control-l" asp-for="LastName" placeholder="Soyad">
                                        <div class="form-control-icon">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-l" asp-for="NationalNumber" placeholder="Kimlik Numarası">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-l" asp-for="PhoneNumber" placeholder="Telefon Numarası">
                            <div class="form-control-icon">
                                <i class="bi bi-phone"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row d-flex">
                                <div class="col-md-6">
                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input type="text" class="form-control form-control-l" asp-for="Country" placeholder="Ülke">
                                        <div class="form-control-icon">
                                            <i class="bi bi-map"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input type="text" class="form-control form-control-l" asp-for="City" placeholder="Şehir">
                                        <div class="form-control-icon">
                                            <i class="bi bi-map"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-l" asp-for="Addres" placeholder="Adres">
                            <div class="form-control-icon">
                                <i class="bi bi-map"></i>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Kayıt Ol</button>
                    </form>
                    <div class="text-center mt-5 text-lg fs-4">
                        <p class='text-gray-600'>
                            Zaten bir hesabın var mı?  <a asp-controller="Login" asp-action="Index" class="font-bold">
                                Giriş
                            </a>.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">
                    <div class="auth-logo">
                        <a href="index.html"><img src="~/themes/mazer-theme/dist/assets/compiled/svg/logo.svg" alt="Logo"></a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="~/themes/mazer-theme/dist/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/static/js/components/dark.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/compiled/js/app.js"></script>
</body>
</html>
