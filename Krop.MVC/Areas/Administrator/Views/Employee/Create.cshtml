@model CreateEmployeeVM
@{
    ViewData["Title"] = "Çalışan Ekle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/styles/choices.min.css">
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/extensions/flatpickr/flatpickr.min.css">
}
@section Scripts {
    <script src="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/static/js/pages/form-element-select.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/extensions/flatpickr/flatpickr.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/static/js/pages/date-picker.js"></script>
    <script src="~/js/script.js"></script>
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Kullanıcılar</label>
                            <select id="appUserSelect" class="choices form-selcet" asp-for="CreateEmployeeDTO.AppUserId">
                                <option disabled selected>Kullanıcı Seçiniz!</option>
                                @if(Model.GetAppUserComboBoxDTOs != null)
                                {
                                    @foreach (var item in Model.GetAppUserComboBoxDTOs)
                                    {
                                        <option value="@item.Id">@item.UserName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Şubeler</label>
                            <select id="branchSelect" class="choices form-selcet" asp-for="CreateEmployeeDTO.BranchId">
                                <option disabled selected>Şube Seçiniz!</option>
                                @if (Model.GetBranchComboBoxDTOs != null)
                                {
                                    @foreach (var item in Model.GetBranchComboBoxDTOs)
                                    {
                                        <option value="@item.Id">@item.BranchName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Departmanlar</label>
                            <select id="departmentSelect" class="choices form-selcet" asp-for="CreateEmployeeDTO.DepartmentId">
                                <option disabled selected>Departman Seçiniz!</option>
                                @if (Model.GetDepartmentComboBoxDTOs != null)
                                {
                                    @foreach (var item in Model.GetDepartmentComboBoxDTOs)
                                    {
                                        <option value="@item.Id">@item.DepartmentName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Maaş</label>
                            <input type="text" class="form-control" asp-for="CreateEmployeeDTO.Salary" placeholder="Maaş"/>
                        </div>
                        <div class="form-group">
                            <div class="row d-flex">
                                <div class="col-md-3">
                                    <label>İşe Başlama Tarihi</label>
                                    <input type="date" class="form-control flatpickr-no-config flatpickr-input" asp-for="CreateEmployeeDTO.StartDateOfWork" placeholder="Tarih Seçiniz..">
                                </div>
                                <div class="col-md-3">
                                    <label>İşten Çıkış Tarihi</label>
                                    <input type="date" class="form-control flatpickr-no-config flatpickr-input" asp-for="CreateEmployeeDTO.EndDateOfWork" placeholder="Tarih Seçiniz..">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Çalışma Durumu</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="true" asp-for="CreateEmployeeDTO.WorkingStatu" id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Aktif
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="false" asp-for="CreateEmployeeDTO.WorkingStatu" id="flexRadioDefault2"
                                       checked>
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Pasif
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
