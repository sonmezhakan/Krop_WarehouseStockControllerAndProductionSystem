@model CreateDepartmentDTO
@{
    ViewData["Title"] = "Departman Ekle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}

<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Departman Adı</label>
                            <input type="text" class="form-control" asp-for="DepartmentName" placeholder="Departman Adı"/>
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea  rows="4" class="form-control" asp-for="Description" placeholder="Açıklama"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
