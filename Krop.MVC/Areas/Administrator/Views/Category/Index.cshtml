@model List<GetCategoryDTO>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.min.css" />
}
@section Scripts{
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/script.js"></script>
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <table id="categoryList" class="table table-striped" width="100%">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th><a asp-asp-controller="Category" asp-action="Add" class="btn btn-success" style="color:white">Ekle</a></th>
                            </tr>
                        </thead>
                        <tbody>
                        @if(Model != null && Model.Count() > 0)
                        {
                               @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CategoryName
                                        </td>
                                        <td>
                                            <a class="btn btn-warning" asp-asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                                            <a class="btn btn-danger" asp-asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                        </td>
                                    </tr>
                                }        
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
        intitializeDataTable('categoryList', 0, 'asc');
    };
</script>