@model CreateCategoryDTO
@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <input asp-for="CategoryName" type="text" class="form-control" placeholder="Kategori Adı"/>
                        </div>
                        <div class="form-group">
                            <button  type="submit" class="btn btn-primary btn-block">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
