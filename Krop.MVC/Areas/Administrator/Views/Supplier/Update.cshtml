@model UpdateSupplierVM
@{
    ViewData["Title"] = "Tedarikçi Güncelle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/styles/choices.min.css">
}
@section Scripts {
    <script src="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="~/js/script.js"></script>
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Tedarikçiler</label>
                            <select id ="supplierSelect" asp-for="UpdateSupplierDTO.Id" class="choices form-select">
                                <option disabled selected>Tedarikçi Seçiniz!</option>
                                @if(Model.GetSupplierComboBoxDTO != null)
                                {
                                    @foreach (var item in Model.GetSupplierComboBoxDTO)
                                    {
                                        @if(Model.UpdateSupplierDTO != null && Model.UpdateSupplierDTO.Id == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.CompanyName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.CompanyName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Firma Adı</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.CompanyName" placeholder="Firma Adı"/>
                        </div>
                        <div class="form-group">
                            <label>İletişim Kurulacak Kişi</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.ContactName" placeholder="İletişim Kurulacak Kişi" />
                        </div>
                        <div class="form-group">
                            <label>İletişim Kurulacak Kişinin Departmanı</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.ContactTitle" placeholder="İletişim Kurulacak Kişinin Departmanı" />
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.PhoneNumber" placeholder="Telefon Numarası" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.Email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <label>Ülke</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.Country" placeholder="Ülke" />
                        </div>
                        <div class="form-group">
                            <label>Şehir</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateSupplierDTO.City" placeholder="Şehir" />
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <textarea rows="4" class="form-control" asp-for="@Model.UpdateSupplierDTO.Addres" placeholder="Adres"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Web Site</label>
                            <input type="url" class="form-control" asp-for="@Model.UpdateSupplierDTO.WebSite" placeholder="Web Site" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
        $("#supplierSelect").change(function () {
            const supplierId = document.getElementById("supplierSelect").value;
            const path = "Tedarikci/Guncelle/" + supplierId;
            redirectToSelectedPage(path);
        })
    }
</script>