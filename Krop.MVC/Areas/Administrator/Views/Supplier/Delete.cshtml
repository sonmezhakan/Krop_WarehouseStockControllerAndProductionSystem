@model DeleteSupplierVM
@{
    ViewData["Title"] = "Tedarikçi Sil";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}

<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Tedarikçiler</label>
                            <select asp-for="Id" class="choices form-select">
                                <option disabled selected>Tedarikçi Seçiniz!</option>
                                @if (Model.GetSupplierComboBoxDTO != null)
                                {
                                    @foreach (var item in Model.GetSupplierComboBoxDTO)
                                    {
                                        @if (Model.Id != null && Model.Id == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.CompanyName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.CompanyName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-block">Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

