@model CreateSupplierDTO
@{
    ViewData["Title"] = "Tedarikçi Ekle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}

<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Firma Adı</label>
                            <input type="text" class="form-control" asp-for="CompanyName" placeholder="Firma Adı"/>
                        </div>
                        <div class="form-group">
                            <label>İletişim Kurulacak Kişi</label>
                            <input type="text" class="form-control" asp-for="ContactName" placeholder="İletişim Kurulacak Kişi" />
                        </div>
                        <div class="form-group">
                            <label>İletişim Kurulacak Kişinin Departmanı</label>
                            <input type="text" class="form-control" asp-for="ContactTitle" placeholder="İletişim Kurulacak Kişinin Departmanı" />
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numarası" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <label>Ülke</label>
                            <input type="text" class="form-control" asp-for="Country" placeholder="Ülke" />
                        </div>
                        <div class="form-group">
                            <label>Şehir</label>
                            <input type="text" class="form-control" asp-for="City" placeholder="Şehir" />
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <textarea rows="4" class="form-control" asp-for="Addres" placeholder="Adres"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Web Site</label>
                            <input type="url" class="form-control" asp-for="WebSite" placeholder="Web Site" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>