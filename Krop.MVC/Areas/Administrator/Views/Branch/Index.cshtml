@model List<GetBranchDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.min.css" />
}
@section Scripts {
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/script.js"></script>
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <table id="branchList" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Şube Adı</th>
                                <th>Telefon Numarası</th>
                                <th>Email</th>
                                <th>Ülke</th>
                                <th>Şehir</th>
                                <th>Adres</th>
                                <th>
                                    <a class="btn btn-success" asp-controller="Branch" asp-action="Create">Ekle</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BranchName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Email</td>
                                        <td>@item.Country</td>
                                        <td>@item.City</td>
                                        <td>@item.Addres</td>
                                        <td>
                                            <a class="btn btn-warning" asp-controller="Branch" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                                            <a class="btn btn-danger" asp-controller="Branch" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                            </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function(){
        intitializeDataTable('branchList', 0, 'asc');
    }
</script>