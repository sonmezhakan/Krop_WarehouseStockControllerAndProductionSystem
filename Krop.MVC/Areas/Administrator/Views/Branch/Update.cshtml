@model UpdateBranchVM
@{
    ViewData["Title"] = "Şube Güncelle";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdministrator.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/styles/choices.min.css">
}
@section Scripts {
    <script src="~/themes/mazer-theme/dist/assets/extensions/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="~/themes/mazer-theme/dist/assets/static/js/pages/form-element-select.js"></script>
    <script src="~/js/script.js"></script>
}
<div class="page-heading">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col">
            <div class="card">
                <partial name="Partials/_SuccessErrorAlertPartial"></partial>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Şubeler</label>
                            <select asp-for="UpdateBranchDTO.Id" id="branchSelect" class="choices form-select">
                                <option disabled selected>Şube Seçiniz!</option>
                                @if(Model.GetBranchComboBoxDTO != null)
                                {
                                    @foreach (var item in Model.GetBranchComboBoxDTO)
                                    {
                                        @if(Model.UpdateBranchDTO != null && Model.UpdateBranchDTO.Id == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.BranchName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.BranchName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Şube Adı</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateBranchDTO.BranchName" placeholder="Şube Adı" />
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateBranchDTO.PhoneNumber" placeholder="Telefon Numarası" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" asp-for="@Model.UpdateBranchDTO.Email" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <label>Ülke</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateBranchDTO.Country" placeholder="Ülke" />
                        </div>
                        <div class="form-group">
                            <label>Şehir</label>
                            <input type="text" class="form-control" asp-for="@Model.UpdateBranchDTO.City" placeholder="Şehir" />
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <textarea rows="4" class="form-control" asp-for="@Model.UpdateBranchDTO.Addres" placeholder="Adres"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function(){
        $("#branchSelect").change(function () {
            const branchId = document.getElementById("branchSelect").value;
            const path = "Sube/Guncelle/" + branchId;
            redirectToSelectedPage(path);
        })
    }
</script>